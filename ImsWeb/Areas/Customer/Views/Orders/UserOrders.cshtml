@model IEnumerable<Ims.Models.Order>

<h2 class="text-center my-4">Your Orders</h2>

@foreach (var order in Model)
{
    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title">Order ID: @order.OrderId</h3>
        </div>
        <div class="card-body">
            <p><strong>Order Date:</strong> @order.OrderDate</p>
            <p><strong>Order Type:</strong> @order.OrderType</p>
            <p><strong>Total Amount:</strong> @order.TotalAmount</p>
            <p><strong>Status:</strong> @order.Status</p>

            <h4 class="mt-4">Order Details</h4>
            <table class="table table-dark rounded-4">
                <thead >
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>    
                <tbody>
                    @foreach (var detail in order.OrderDetails)
                    {
                        <tr>
                            <td>@detail.Products.ProductName</td>
                            <td>@detail.Quantity</td>
                            <td>@detail.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
