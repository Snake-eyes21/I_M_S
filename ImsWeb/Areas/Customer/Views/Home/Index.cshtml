@using System.Globalization
@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6 mb-4">
            <div class="card h-100 border-0 shadow border-top border-5 rounded">
                <img src="@product.ImageUrl" class="card-img-top rounded" style="height: 200px; object-fit: cover;" />
                <div class="card-body d-flex flex-column">
                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.ProductName</p>
                    <p class="text-dark text-opacity-75 text-center">For just: <span>@product.UnitPrice.ToString("C", new CultureInfo("en-IN"))</span></p>
                    <a asp-action="Details" asp-route-productId="@product.ProductId" class="btn btn-primary bg-gradient border-0 mt-auto">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>
